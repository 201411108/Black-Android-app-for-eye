<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/isgTestImage"
        android:layout_width="176dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/isgTestTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text = "Test"
        android:textSize = "20dp"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/isgTestButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Setter"
            />

        <Button
            android:id="@+id/isgTestButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text = "Getter"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/RBgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/foodRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food" />

            <RadioButton
                android:id="@+id/teaRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tea" />

            <RadioButton
                android:id="@+id/pillRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pill" />

            <RadioButton
                android:id="@+id/exerciseRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exercise" />

            <RadioButton
                android:id="@+id/tipRB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="tip" />

        </RadioGroup>

    </LinearLayout>


    <EditText
        android:id="@+id/keyET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="key" />

    <EditText
        android:id="@+id/nameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="name" />

    <EditText
        android:id="@+id/costET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="cost" />

    <EditText
        android:id="@+id/elementET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="element" />

    <EditText
        android:id="@+id/effectET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="effect" />

    <EditText
        android:id="@+id/explainET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="explain" />

    <ImageView
        android:id="@+id/imgTestView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />


</LinearLayout>